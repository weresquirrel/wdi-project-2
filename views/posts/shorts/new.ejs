<form  action="/shorts" method="POST">
  <div>
    <label for="title">Project Title</label>
    <input type="text" name="title" id="title" required>
  </div>
  <div>
    <label for="description">Description</label>
    <input type="textarea" name="description" id="description" required>
  </div>

  <form action="/shorts/<%= short.id %>/pictures" method="post">
    <div>
      <label for="picture">Picture url</label>
      <input type="text" name="picture" id="picture" required>
    </div>
    <div>
      <label for="caption">Caption</label>
      <input type="text" name="caption" id="caption" required>
    </div>

    <button class="button">Add</button>
  </form>

  <button class="button">Create</button>
</form>
