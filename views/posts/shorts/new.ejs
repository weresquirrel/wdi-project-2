<form action="/posts/short" method="POST">
  <div>
    <label for="title">Project Title</label>
    <input type="text" name="title" id="title" required>
  </div>

  <div>
    <label for="description">Description</label>
    <input type="textarea" name="description" id="description" required>
  </div>

  <div class="pictures-form">
    <h3>Pictures</h3>
    <ul class="pictures-container">
    </ul>
    <hr>
    <div>
      <label for="picture">Picture url</label>
      <input type="text" name="picture" id="picture">
    </div>
    <div>
      <label for="caption">Caption</label>
      <input type="text" name="caption" id="caption">
    </div>

    <p class="add-picture-button btn btn-primary" type="button" name="button">
      Save Picture
    </p>
  </div>

  <textarea id="allPictures" name="pictures" style="display:none;"></textarea>

  <button class="button">Create</button>
</form>
